#!/bin/bash
set -u

DIR=.

if (( $# > 1 )); then
    DIR=$1
fi

STATUS=0

#if [[ -f $DIR/.SRCINFO ]]; then
#    echo "unimplemented!"
#    exit 1

if [[ -f $DIR/PKGBUILD ]]; then
    printf "source PKGBUILD? \e[31m(potentially dangerous!)\e[0m > "
    read YN
    case "$YN" in
        y*|Y*)
            :
            ;;
        *)
            exit 1
            ;;
    esac
    . $DIR/PKGBUILD
else
    echo "no .SRCINFO or PKGBUILD"
    exit 1
fi

check() {
    local command=$1
    local sum=$2
    local basename=$3
    local changestatus=${4:1}
    local rmflag=${5:0}
    if [[ -z $sum ]]; then
        return 0
    fi
    if [[ $sum != SKIP ]]; then
        echo "check $command $sum $basename"
        if echo "$sum  $basename" | "$command" -c; then
            return 0
        else
            if (( $rmflag )); then
                rm "$basename"
            fi
            if (( $changestatus )); then
                STATUS=1
            fi
            return 1
        fi
    fi
    return 0
}

i=0

for url in ${source[@]}
do
    printf "\e[1m---- $url\e[0m ----\n"

    basename=$(basename "$url")
    sha512sum=${sha512sums[$i]:-}
    sha256sum=${sha256sums[$i]:-}
    md5sum=${md5sums[$i]:-}
    let i++

    if [[ -e $basename ]]; then
        if [[ -n $sha512sum ]]; then
            if check sha512sum "$sha512sum" "$basename" 0; then
                continue
            fi
        fi
        if [[ -n $sha256sum ]]; then
            if check sha256sum "$sha256sum" "$basename" 0; then
                continue
            fi
        fi
        if [[ -n $md5sum ]]; then
            if check md5sum "$md5sum" "$basename" 0; then
                continue
            fi
        fi
    fi

    case "$url" in
        git://*|git+https://*)
            url="${url/git+https:/https:}"
            if git clone --depth 1 "$url"; then
                : #ok
            else
                rm -rf $basename
                STATUS=1
            fi
            ;;
        http://*|https://*)
            if curl -fLO "$url"; then
                    check sha512sum "$sha512sum" "$basename" 1 1
                    check sha256sum "$sha256sum" "$basename" 1 1
                    check md5sum "$md5sum" "$basename" 1 1
            else
                rm $basename
                STATUS=1
                fi
            ;;
        *)
            echo "file not exists (or unimplemented...)"
            STATUS=1
            ;;
    esac
done

if (( $STATUS )); then
    echo "failed."
    exit $STATUS
fi
